{
  "name": "redrock-qq-bot",
  "private": true,
  "version": "1.0.0",
  "description": "Here is a monorepo about redrock-qq-bot",
  "scripts": {
    "coverage": "vitest run --coverage",
    "delete": "pm2 delete bot",
    "list": "pm2 list",
    "log": "pm2 logs bot",
    "stop": "pm2 stop bot",
    "prepare": "husky install && husky add .husky/pre-commit",
    "lint-staged": "lint-staged",
    "build": "pnpm -r --filter='./packages/*' run build"
  },
  "keywords": [
    "Redrock-FE",
    "qq-bot"
  ],
  "author": "Redrock-FE",
  "license": "MIT",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*": [
      "prettier --write --cache --ignore-unknown"
    ],
    "packages/*/{src,types}/**/*.ts": [
      "eslint --cache --fix"
    ],
    "packages/**/*.d.ts": [
      "eslint --cache --fix"
    ]
  },
  "devDependencies": {
    "@types/node": "^18.7.23",
    "@typescript-eslint/eslint-plugin": "^5.40.0",
    "@typescript-eslint/parser": "^5.40.0",
    "eslint": "^8.24.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "esno": "^0.16.3",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "nodemon": "^2.0.20",
    "pm2": "^5.2.0",
    "prettier": "^2.7.1",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.3",
    "unbuild": "^0.8.11",
    "vitest": "^0.23.4"
  },
  "dependencies": {
    "oicq": "^2.3.1"
  },
  "engines": {
    "node": ">=14.0.0"
  }
}
